<CameraScreen>
    GridLayout:
        spacing: 10
        padding: 10
        cols: 1
        Camera:
            id: camera
            resolution: (1920, 1080)
            size_hint_y: 0.8
            play: False
            opacity: 0
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0)
                Rectangle:
                    pos: self.pos
                    size: self.size
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
        Button:
            id: capturebtn
            text: 'Capture'
            size_hint_y: 0.1
            on_release: root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Button:
            id: startbtn
            text: 'Start'
            size_hint_y: 0.1
            on_release: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
<ImageScreen>
    GridLayout:
        cols: 1
        Image:
            id: img
            source: ''
            size_hint_y: 0.7
        Button:
            id: createlinkbtn
            text: 'Create Link'
            on_release: root.share()
            size_hint_y: 0.1
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Label:
            id: linklabel
            text:
            size_hint_y: 0.1
        GridLayout:
            spacing: 10
            padding: 10
            size_hint_y: 0.1
            cols: 3
            Button:
                id: copylinkbtn
                text: 'Copy Link'
                on_release: root.copylink()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
            Button:
                id: openlinkbtn
                text: 'Open Link'
                on_release: root.openlink()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
            Button:
                id: backbtn
                text: 'Go Back'
                on_release: root.goback()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'

<RootWidget>
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0.8, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'